    const a=10;
		const b=5;
		const mul=a*b; 
document.getElementById("result").innerHTML = a+" * "+ b+" 의 결과는 " + mul; 
</script>


  <div id="cost"></div>

  <script>
     let price;
     let quantity;
     let total2;
     price=5000;
     quantity=14;
     total2 = price * quantity;
     const el=document.getElementById("cost");
     el.innerHTML = "$"+total2.toLocaleString();
  </script>
