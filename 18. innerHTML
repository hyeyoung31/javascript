<script>
    const jum1 = 80;
          const jum2 = 100;
          const jum3 = 90;
    const total = jum1 + jum2 + jum3;
    const ave = total / 3;
    const tot = document.getElementById("total");  
    const aver = document.getElementById("aver");
    tot.innerHTML ="합계 = " + total;
          aver.innerHTML ="평균 = " + ave;	   
</script>

